{
    "defaults": {
        "host": "0.0.0.0",
        "port": 22,
        "username": "root",
        "privateKeyPath": "/absolute/path/to/private/key",
        "localDir": "www/website",
        "archiveExisting": true,
        "archiveDir": "/var/www/animedimension/archive",
        "minRemoteDepth": 3
    },
    "deployments": {
        "site": {
            "remoteDir": "/var/www/animedimension/html"
        },
        "cs": {
            "localDir": "www/website-cs",
            "remoteDir": "/var/www/animedimension/html-cs",
            "postCommands": [
                "chmod +x /var/www/animedimension/html-cs/start.sh",
                "systemctl restart animedimension-cs.service",
                "systemctl status --no-pager --full animedimension-cs.service"
            ],
            "preCommands": [
                "systemctl stop animedimension-cs.service"
            ]
        },
        "staging": {
            "host": "0.0.0.0",
            "remoteDir": "/var/www/animedimension-staging/html",
            "archiveExisting": false
        }
    }
}

